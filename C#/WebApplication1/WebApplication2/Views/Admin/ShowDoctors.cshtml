@model IEnumerable<Doctor>

<table class="table-bordered">

    <thead>
        <tr>
            <th>
                Doctor name
            </th>
            <th>
                Doctor surname
            </th>
            <th>
                Doctor specialty
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var doctor in Model)
            {
                <tr>
                    <th>
                        @doctor.Name
                    </th>
                    <th>
                        @doctor.SurName
                    </th>
                    <th>
                        @doctor.Specialty
                    </th>
                    <th>
                        <form asp-controller="Admin" asp-action="EditDoctor" asp-route-id="@doctor.Id">
                            <input type="submit" value="edit" />
                        </form>
                    </th>
                    <th>
                        <button asp-action="DeleteDoctor">
                            delete
                        </button>
                    </th>

                </tr>

            }

        }

    </tbody>
</table>

